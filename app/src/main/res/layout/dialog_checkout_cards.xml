<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingRight="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:id="@+id/ll_dialog_main"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_corner_cream">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cards"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_add_new_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FontRegular"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_1"
            android:text="@string/add_new_credit_card"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sp_16"
        android:textAppearance="@style/TextAppearance.FontDemiBold"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:background="@drawable/shape_corner_cream"
        android:layout_marginTop="@dimen/dp_10" />


</LinearLayout>
