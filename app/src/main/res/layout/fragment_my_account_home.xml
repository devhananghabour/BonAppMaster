<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="app.bonapp.activities.MyAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@color/colorBgWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_for_merchants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_modalnoaccess_home"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/for_merchants"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@color/colorBgWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_my_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_myorder"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/my_orders"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@color/colorBgWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_my_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/_c_mydetails"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/my_details"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_60"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_my_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_rightarrow"
            android:drawablePadding="@dimen/dp_2"
            android:drawableStart="@drawable/ic_delivery"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_15"
            android:text="@string/my_addesses"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_60"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_payment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_paymentmethod"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/payment_details"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@color/colorBgWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/about_bonapp"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_rightarrow"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:text="@string/log_out"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlackishText"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorAccountView" />

        <TextView
            android:id="@+id/logged_in_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBgWhite"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_15"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="#0c5460"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBgWhite" />

    </LinearLayout>

</ScrollView>
