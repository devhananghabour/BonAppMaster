<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.FontBold"
            android:text="Eat well.\nSave money.\nDo good."

            />

        <TextView
            android:id="@+id/tv_sub_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_15"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:text="BonApp gives you great food at low prices. If you fancy eating at unusual times, say a late lunch or early dinner, then we can give you discounts up tp 60% off the normal price. Sounds good?"

            />
    </LinearLayout>

</RelativeLayout>