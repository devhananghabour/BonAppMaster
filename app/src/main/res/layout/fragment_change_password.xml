<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_change_pwd"
    android:background="@color/colorBgWhite"
    android:clickable="true"
    tools:context="com.bonapp.app.bonapp.fragments.accountfragments.ChangeEmailFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorAccountView"
        android:layout_marginTop="@dimen/dp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/dp_50"
        android:background="@color/colorWhite">

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlackishText"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/old_pwd"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:background="@null"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_register_greypassword"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15" />


        <TextView
            android:id="@+id/tv_old_toggle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/appDarkGreen"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:padding="@dimen/dp_15"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/show"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorAccountView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorAccountView"
        android:layout_marginTop="@dimen/dp_20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/dp_50"
        android:background="@color/colorWhite"

        >

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlackishText"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/new_pwd"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:background="@null"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_register_greypassword"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15" />


        <TextView
            android:id="@+id/tv_new_toggle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/appDarkGreen"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:padding="@dimen/dp_15"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/show"
            android:visibility="gone"

            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorAccountView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorAccountView"
        android:layout_marginTop="@dimen/dp_20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/dp_50"
        android:background="@color/colorWhite"

        >

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorBlackishText"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/confirm_pwd"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:background="@null"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_register_greypassword"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15" />


        <TextView
            android:id="@+id/tv_confirm_toggle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/appDarkGreen"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:padding="@dimen/dp_15"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/show"
            android:visibility="gone"

            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorAccountView" />


</LinearLayout>
