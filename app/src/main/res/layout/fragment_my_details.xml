<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/colorBgWhite" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:hint="@string/first_name"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:enabled="false"
                android:background="@null"
                android:inputType="textPersonName" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"
                android:layout_marginLeft="@dimen/dp_15" />


            <EditText
                android:id="@+id/et_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:background="@null"
                android:hint="@string/phone_number"
                android:inputType="number"
                android:enabled="false"
                android:maxLength="14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/colorBgWhite" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView" />

            <EditText
                android:id="@+id/et_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:hint="@string/address"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:enabled="false"
                android:inputType="textPostalAddress|textMultiLine"
                android:background="@null"
                android:maxLines="5"
                android:maxLength="40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"
                android:layout_marginLeft="@dimen/dp_15" />


            <TextView
                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:hint="@string/country"
                android:textAppearance="@style/TextAppearance.FontMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:hint="@string/state"
                android:textAppearance="@style/TextAppearance.FontMedium"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:hint="@string/city"
                android:textAppearance="@style/TextAppearance.FontMedium"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"
                android:layout_marginLeft="@dimen/dp_15" />

            <EditText
                android:id="@+id/et_postal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackishText"
                android:padding="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:hint="@string/postal"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:enabled="false"
                android:maxLength="9"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/colorBgWhite" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView" />

            <TextView
                android:id="@+id/tv_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/appDarkGreen"
                android:text="@string/change_e_mail_address"
                android:padding="@dimen/dp_15"
                android:drawableLeft="@drawable/ic_greenmail"
                android:drawableRight="@drawable/ic_rightarrow"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:background="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.FontMedium"

                />

            <View
                android:id="@+id/view_change_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/appDarkGreen"
                android:text="@string/change_password"
                android:padding="@dimen/dp_15"
                android:drawableLeft="@drawable/ic_greenpassword"
                android:drawableRight="@drawable/ic_rightarrow"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:background="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.FontMedium"

                />

            <View
                android:id="@+id/view_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorAccountView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBgWhite" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/progress_bar_value"
            android:theme="@style/MyTheme"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>
