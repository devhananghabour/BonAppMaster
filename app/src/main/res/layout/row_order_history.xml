<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/ll_order_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_50"
        android:background="@color/colorWhite">

        <View
            android:id="@+id/view_side"
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"
            android:background="@color/appLightGreen"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Shish Shack"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:textAppearance="@style/TextAppearance.FontMedium" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Order By: Shiva"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_2" />

            <TextView
                android:id="@+id/row_order_history_tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ORDER ACCEPTED"
                android:visibility="gone"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/appDarkGreen"
            android:layout_gravity="center_vertical"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="@dimen/dp_5"
            tools:text="5.25" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorView"
        android:layout_marginLeft="@dimen/dp_15" />

</LinearLayout>