<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_delivery_info"
    android:background="@color/colorWhite"
    tools:context="com.bonapp.app.bonapp.activities.DeliverInfoActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/include_toolbar">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"
            android:layout_marginTop="@dimen/dp_15" />

        <EditText
            android:id="@+id/et_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackishText"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/address"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:inputType="textPostalAddress"
            android:background="@null"
            android:maxLength="40"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"
            android:layout_marginLeft="@dimen/dp_15" />


        <TextView
            android:id="@+id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackishText"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/country"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:drawableEnd="@drawable/ic_down" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackishText"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/state"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:drawableEnd="@drawable/ic_down"


            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackishText"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/city"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:drawableEnd="@drawable/ic_down"


            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"
            android:layout_marginLeft="@dimen/dp_15" />

        <EditText
            android:id="@+id/et_postal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackishText"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/postal"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:maxLength="9"
            android:background="@null"
            android:singleLine="true"
            android:maxLines="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"
            android:layout_marginLeft="@dimen/dp_15" />

        <EditText
            android:id="@+id/et_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackishText"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:hint="@string/phone_number"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:maxLength="14"
            android:background="@null"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorAccountView"

            />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/progress_bar_value"
        android:theme="@style/MyTheme"
        android:visibility="gone" />

</RelativeLayout>
