<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_merchant_detail"

    >

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        >


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.bonapp.fragments.merchant.CreateDealFragment">


        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/title"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_title"
                style="@style/CreateDealEditTextTheme"
                android:hint="@string/title"
                android:inputType="text"
                android:enabled="false"
                android:maxLength="50" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />

        <LinearLayout
            android:id="@+id/ll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/description"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/colorCreateDealInput"
                android:textColorHint="@color/colorTextHint"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:textSize="@dimen/sp_15"
                android:background="@null"
                android:hint="@string/description"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="140"
                android:enabled="false"
                android:text="shihsiv
ekekknvekn
efjjrefj
fjeofefkhrehf
ejfjef
efjjeroi"
                android:maxLines="5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />


        <LinearLayout
            android:id="@+id/ll_total_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_items"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_total_items"
                style="@style/CreateDealEditTextTheme"
                android:hint="@string/total_items"
                android:inputType="number"
                android:enabled="false"
                android:maxLength="5"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />

        <LinearLayout
            android:id="@+id/ll_original_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/original_price"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_original_price"
                android:hint="@string/original_price"
                android:inputType="numberDecimal"
                style="@style/CreateDealEditTextTheme"
                android:enabled="false"
                android:maxLength="7" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />

        <LinearLayout
            android:id="@+id/ll_new_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/new_price"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_new_price"
                android:hint="@string/new_price"
                style="@style/CreateDealEditTextTheme" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/begins"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_begin_time"
                android:focusable="false"
                android:hint="@string/begins"
                style="@style/CreateDealEditTextTheme"
                android:enabled="false"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ends"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/appDarkGreen"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/et_end_time"
                android:focusable="false"
                android:hint="@string/ends"
                style="@style/CreateDealEditTextTheme"
                android:enabled="false"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/colorView" />


        <LinearLayout
            android:id="@+id/ll_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_discount_perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontDemiBold"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_5"
                tools:text="5%"
                />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekbar_newprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_20"
                android:max="20"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_deactivate_deal"
        style="@style/AppRedButton"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_15"
        android:text="@string/deactivate_deal"
        android:visibility="gone" />

</RelativeLayout>

    </ScrollView>
</LinearLayout>