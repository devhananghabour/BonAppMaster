<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%"
    android:fromDegrees="0"
    android:toDegrees="1440">
    <shape
        android:shape="ring"
        android:useLevel="false">

        <size
            android:width="72dip"
            android:height="72dip" />

        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:startColor="#045461"
            android:centerColor="#498E93"
            android:centerY="0.90"
            android:endColor="#32045461"
            android:angle="0" />


    </shape>
</rotate>