<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation.Activity</item>
    </style>

    <style name="WhiteColorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation.Activity</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/appDarkGreen</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.FontMedium" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-Medium.ttf</item>
    </style>


    <style name="TextAppearance.FontBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-Bold.ttf</item>
    </style>

    <style name="TextAppearance.FontDemiBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-DemiBold.ttf</item>
    </style>

    <style name="TextAppearance.FontRegular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Heavy" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-Heavy.ttf</item>
    </style>

    <style name="TextAppearance.Italic" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-Italic.ttf</item>
    </style>

    <style name="TextAppearance.UltraLight" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirNext-UltraLight.ttf</item>
    </style>



    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DialogAnimationZoom">
        <item name="android:windowEnterAnimation">@anim/zoom_in_full</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_full</item>

    </style>


    <style name="DialogAnimationZooma" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationZoom</item>

    </style>


    <style name="RegisterEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlackishText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.FontMedium</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="CreateDealEditTextTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textColor">@color/colorCreateDealInput</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.FontRegular</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="AppRedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.FontDemiBold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/shape_rect_corener_red</item>
    </style>

    <style name="SlideAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="TranslucentStatusStyle" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_green</item>


    </style>

    <!--  Transparent dialog -->
    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WhiteColorTheme.WhiteToolbar">
        <item name="actionMenuTextColor">@color/appDarkGreen</item>
        <item name="android:actionMenuTextColor">@color/appDarkGreen</item>
    </style>

    <style name="AppTheme.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
